    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >

            <FrameLayout
                android:id="@+id/flSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab"
                    android:layout_width="wrap_content"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="8dp"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="7dp"
                    app:tabMode="scrollable" />

                <ProgressBar
                    android:id="@+id/progBarSlider"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/product"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:src="@drawable/product" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:text="@string/product"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/news"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:longClickable="false"
                            android:layout_gravity="center"
                            android:src="@drawable/news" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:text="@string/news"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/cataloug"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:src="@drawable/cataloug" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:text="@string/catalouge"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/surprice"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:longClickable="false"
                            android:layout_gravity="center"
                            android:src="@drawable/surprice" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:text="@string/cadua"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="2"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/offers"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:src="@drawable/offer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:longClickable="false"
                            android:text="@string/offers"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/product"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="90dp"


